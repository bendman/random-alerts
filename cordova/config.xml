<?xml version='1.0' encoding='utf-8'?>
<widget id="me.benduncan.alerts" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Random Alerts</name>
    <description>
        Create alerts that go off at a random time within a designated window. This can be great for projects such as "Photo 365" or "1 Second Every Day" or just as a reminder to call relatives!
    </description>
    <author email="duncan.ben@gmail.com" href="http://benduncan.me">
        Ben Duncan
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
