<?xml version='1.0' encoding='utf-8'?>
<widget id="me.benduncan.alerts" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <allow-intent href="market:*" />
    <name>Random Alerts</name>
    <description>
        Create alerts that go off at a random time within a designated window. This can be great for projects such as "Photo 365" or "1 Second Every Day" or just as a reminder to call relatives!
    </description>
    <author email="duncan.ben@gmail.com" href="http://benduncan.me">
        Ben Duncan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
